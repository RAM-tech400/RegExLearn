<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RegExLearn" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RegExLearn" parent="Base.Theme.RegExLearn" />

    <style name="Theme.RegExLearn.RegexInputEditText">
        <item name="android:background">@drawable/regex_text_input_background</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:fontFamily">@font/monospace_font</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="drawableTint">?attr/colorPrimaryVariant</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="ShapeAppearance.RegExLearn.ListItem.CardView.Single">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearance.RegExLearn.ListItem.CardView.Top">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="ShapeAppearance.RegExLearn.ListItem.CardView.Middle">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.RegExLearn.ListItem.CardView.Bottom">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

</resources>