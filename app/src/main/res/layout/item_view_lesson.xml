<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/item_view_lesson_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentPaddingTop="12dp"
        app:contentPaddingBottom="12dp"
        style="@style/Widget.Material3.CardView.Filled"
        app:shapeAppearance="@style/ShapeAppearanceListItemCardViewSingle"
        android:id="@+id/item_view_lesson_card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outline_play_arrow_24"
                android:id="@+id/item_view_lesson_image_view_state"/>

            <TextView
                android:id="@+id/item_view_lesson_text_view_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:text="1. Lesson One Title Lesson One Title Lesson One Title Lesson One Title"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>