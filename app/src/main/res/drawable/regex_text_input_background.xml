<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape>
            <stroke android:color="?attr/colorOutline" android:width="1dp"/>
            <corners android:radius="12dp"/>
            <solid android:color="?attr/colorSurfaceContainerLow"/>
            <padding android:left="12dp" android:right="12dp" android:bottom="8dp" android:top="8dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke android:color="?attr/colorOnPrimaryContainer" android:width="2dp"/>
            <corners android:radius="12dp"/>
            <solid android:color="?attr/colorPrimaryContainer"/>
            <padding android:left="12dp" android:right="12dp" android:bottom="8dp" android:top="8dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:color="?attr/colorOnSurfaceVariant" android:width="1dp"/>
            <corners android:radius="12dp"/>
            <solid android:color="?attr/colorSurfaceDim"/>
            <padding android:left="12dp" android:right="12dp" android:bottom="8dp" android:top="8dp"/>
        </shape>
    </item>
</selector>